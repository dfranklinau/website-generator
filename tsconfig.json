{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"]
  },
  "exclude": ["./node_modules"],
  "include": ["./src/**/*.ts", "./index.d.ts"]
}
